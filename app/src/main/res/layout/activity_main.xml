<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ptp.phamtanphat.fragmentcommunicator.MainActivity">

    <TextView
        android:textColor="@color/colorPrimary"
        android:id="@+id/textviewMain"
        android:layout_centerHorizontal="true"
        android:textSize="40sp"
        android:text="Main Activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
   <SeekBar
       android:id="@+id/seekbarmain"
       android:layout_below="@id/textviewMain"
       android:layout_width="match_parent"
       android:layout_height="50dp" />
    <LinearLayout
        android:id="@+id/linearlayout"
        android:orientation="vertical"
        android:layout_below="@id/seekbarmain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <fragment
            android:id="@+id/fragmenta"
            android:name="com.ptp.phamtanphat.fragmentcommunicator.FragmentA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <fragment
            android:id="@+id/fragmentb"
            android:name="com.ptp.phamtanphat.fragmentcommunicator.FragmentB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</RelativeLayout>
